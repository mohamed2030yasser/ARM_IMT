


#include "../../LIB/BIT_MATH.h"
#include "../../LIB/STD_TYPES.h"

#include "../RCC/RCC_cfg.h"
#include "../RCC/RCC_int.h"
#include "../RCC/RCC_prv.h"

#include "NVIC_cfg.h"
#include "NVIC_prv.h"
#include "NVIC_init.h"


void NVIC_vEnable_Pri_Interrupt(u8 Pri_Id)
{
	NVIC->ISER[Pri_Id/32] = (1 << (Pri_Id % 32));
}

void NVIC_vDisable_Pri_Interrupt(u8 Pri_Id)
{
	NVIC->ICER[Pri_Id/32] = (1 << (Pri_Id % 32));
}
